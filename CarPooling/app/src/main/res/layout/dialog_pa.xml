<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/background_dialog_dark">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/options"
                android:orientation="vertical" >

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="?android:attr/actionBarSize"
                        android:id="@+id/address"
                        android:padding="8dp"
                        android:layout_margin="8dp"
                        android:hint="Punto di Arrivo"
                        android:singleLine="false"
                        android:maxLines="3"
                        android:inputType="textCapSentences"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@android:color/white"
                        android:textColorHint="@color/white_back" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="?android:attr/actionBarSize"
                android:layout_below="@+id/options"
                android:layout_marginRight="16dp"
                android:layout_marginEnd="16dp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/action_save"
                    android:textAppearance="?android:attr/buttonStyle"
                    android:textAllCaps="true"
                    android:textSize="14sp"
                    android:padding="8dp"
                    android:clickable="true"
                    android:fontFamily="sans-serif-medium"
                    android:textColor="@color/accent"
                    android:background="@drawable/item_background_md"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:id="@+id/action_save" />

            </RelativeLayout>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>