<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_margin="16dp">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/p_image_container">
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_person_null"
                android:background="@drawable/back_icon"
                android:id="@+id/p_image"
                android:layout_centerVertical="true" />
            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:id="@+id/p_image_checked"
                android:padding="8dp"
                android:background="@drawable/back_icon_opacity_black"
                android:src="@drawable/ic_tick"
                android:visibility="gone" />
            <ImageView
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:id="@+id/has_car"
                android:padding="1dp"
                android:background="@drawable/back_icon"
                android:layout_alignBottom="@+id/p_image"
                android:layout_alignRight="@+id/p_image" />
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/p_image_container"
            android:layout_toEndOf="@+id/p_image_container">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/p_name"
                    android:singleLine="true"
                    android:textColor="@android:color/white"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Tommaso Berlose"
                    android:layout_marginLeft="16dp"
                    android:layout_marginStart="16dp" />
            </RelativeLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/p_address"
                android:singleLine="true"
                android:textColor="@color/white_back"
                android:fontFamily="sans-serif-light"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Info"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp"/>
        </LinearLayout>
        <ImageView
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/ic_action_navigation_more_vert"
            android:id="@+id/action_menu"
            android:alpha="0.5"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="2dp" />
    </RelativeLayout>

</RelativeLayout>