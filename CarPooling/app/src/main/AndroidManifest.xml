<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.nego.carpooling" >

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".Main"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ChoosePeople"
            android:label="@string/title_activity_choose_people"
            android:theme="@style/AppTheme" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.nego.carpooling.Main" />

            <intent-filter>
                <action android:name="com.nego.carpooling.intent.action.UPDATE_LIST" />
            </intent-filter>
        </activity>

        <service
            android:name=".Functions.PersonService"
            android:exported="false" >
        </service>

        <activity
            android:name=".Help"
            android:label="@string/title_activity_help" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.nego.carpooling.ChoosePeople" />
        </activity>
        <activity
            android:name=".Settings"
            android:label="@string/title_activity_settings" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.nego.carpooling.ChoosePeople" />
        </activity>
        <activity
            android:name=".Preferences"
            android:label="@string/title_activity_preferences"
            android:parentActivityName=".ChoosePeople" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.nego.carpooling.ChoosePeople" />
        </activity>
        <activity
            android:name=".CalculateDistances"
            android:label="@string/title_activity_calculate_distances" >
        </activity>
        <activity
            android:name=".Follow"
            android:label="@string/title_activity_follow"
            android:parentActivityName=".CalculateDistances" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.nego.carpooling.CalculateDistances" />
        </activity>
    </application>

</manifest>
